{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ProxyBeuker OSX",
            "type": "shell",
            "command": "${config:python.pythonPath} -m PyInstaller --onefile -y --icon=ico.icns --windowed gui_rendertool.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Zip ProxyBeuker Build",
            "type": "shell",
            "command": "zip -r dist/proxybeuker.zip dist/gui_rendertool.app",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}